section class="status-area"
  h2 Game Status
  ul.turn
    li 
      = "It is " + @game.current_player.name 
      | 's turn.
  - binding.pry
  ul.pond
    li
      | Pond has 
      = "#{@game.pond_size} cards."
  ul.status
    - @game.players_by_hand.each do |hand, player|
      li #{player.name} has #{player.hand.count} cards and has made #{@game.books(hand).count} books (#{@game.books_to_s(hand)}) #{(player.name == @my.name) ? '[You]' : ''}.
